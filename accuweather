		awk 'FNR==2 { print $10 }' FS="\":\"" $HOME/Accuweather_conky_script/curr_cond_raw >> $HOME/Accuweather_conky_script/curr_cond
		awk 'FNR==2 { print $26 }' FS="\":\"" $HOME/Accuweather_conky_script/curr_cond_raw >> $HOME/Accuweather_conky_script/curr_cond
		awk 'FNR==2 { print $30 }' FS="\":\"" $HOME/Accuweather_conky_script/curr_cond_raw >> $HOME/Accuweather_conky_script/curr_cond
		awk 'FNR==2 { print $4 }' FS="\":\"" $HOME/Accuweather_conky_script/curr_cond_raw >> $HOME/Accuweather_conky_script/curr_cond
		awk 'FNR==2 { print $2 }' FS="\":\"" $HOME/Accuweather_conky_script/curr_cond_raw >> $HOME/Accuweather_conky_script/curr_cond
