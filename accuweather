		awk 'FNR==1 { print $10 }' FS="\":\"" $HOME/Accuweather_conky_script/curr_cond_raw >> $HOME/Accuweather_conky_script/curr_cond
		awk 'FNR==1 { print $12 }' FS="\":\"" $HOME/Accuweather_conky_script/curr_cond_raw >> $HOME/Accuweather_conky_script/curr_cond
		awk 'FNR==1 { print $8 }' FS="\":\"" $HOME/Accuweather_conky_script/curr_cond_raw >> $HOME/Accuweather_conky_script/curr_cond
		echo 'EMPTY LINE FOR COMPATIBILITY WITH THE OLD CONKYRC FILES' >> $HOME/Accuweather_conky_script/curr_cond
		awk 'FNR==1 { print $4 }' FS="\":\"" $HOME/Accuweather_conky_script/curr_cond_raw >> $HOME/Accuweather_conky_script/curr_cond
		awk 'FNR==1 { print $6 }' FS="\":\"" $HOME/Accuweather_conky_script/curr_cond_raw >> $HOME/Accuweather_conky_script/curr_cond
		awk 'FNR==1 { print $2 }' FS="\":\"" $HOME/Accuweather_conky_script/curr_cond_raw >> $HOME/Accuweather_conky_script/curr_cond
